h3 {{name | uppercase}}

.row
  .col-md-4
    form(name='userForm', novalidate)
      .form-group
        label(for='email') Email
        input.form-control#email(type='email', name='email', ng-model='user.email')
      .form-group
        label(for='password') Password
        input.form-control#password(type='password', name='password', ng-model='user.password')
      .form-group
        button.btn.btn-default(type='submit', ng-click='submit(user)') Submit
        button#twitter.btn.btn-info(ng-click='oauth("twitter")'): i.fa.fa-twitter
        button#gplus.btn.btn-danger(ng-click='oauth("google")'): i.fa.fa-google-plus
        button#github.btn.btn-warning(ng-click='oauth("github")'): i.fa.fa-github
        button#facebook.btn.btn-info(ng-click='oauth("facebook")'): i.fa.fa-facebook
  .col-md-8
