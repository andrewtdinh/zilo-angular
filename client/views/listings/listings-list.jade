
.row
  .col-md-2
    h4.listPageLabel House Listings

  .col-md-2
    .form-group(ng-show='activeUser')
      select(ng-model='selectedZip')
        option(ng-repeat='zip in zips') {{zip}}
      button.filterBtn.btn.btn-xs.btn-info(ng-click='filterByZip(selectedZip)') Filter by Zip
  .col-md-8
    .form-group(ng-show='activeUser')
      select(ng-model='selectedCity')
        option(ng-repeat='city in cities') {{city}}
      button.filterBtn.btn.btn-xs.btn-info(ng-click='filterByCity(selectedCity)') Filter by City
    
.row
  .col-xs-2
    .contDiv(ng-repeat='listing in listings track by $index', ng-mouseenter='toggleBounce(listing)', ng-mouseleave='toggleBounce(listing)')
      .photoDiv(ng-click='show(listing)')
        img.photoThumb(ng-src='{{listing.photo}}')
        h5 {{listing.price | currency}}
        h6 {{listing.sqft}} &nbsp; SQFT
  .col-xs-10
    #listingMap
