.row
  .col-md-4.col-md-offset-3
    h3 {{}} Listing

.row
  .col-md-6.col-md-offset-3
    form(name='areaForm', novalidate)
      .form-group
        label(for='street') Street Address
        input.form-control#street(type='text', name='street', ng-model='listing.street', required)
.row  
  .col-md-2.col-md-offset-3
    .form-group
      label(for='city') City
      input.form-control#city(type='text', name='city', ng-model='listing.city', required)
  .col-md-2
    .form-group
      label(for='state') State
      input.form-control#state(type='text', name='state', placeholder='Alaska', ng-model='listing.state', required)
  .col-md-2
    .form-group
      label(for='zip') Zip Code
      input.form-control#zip(type='text', name='zip', ng-model='listing.zip', required)
.row
  .col-md-1.col-md-offset-3
    .form-group
      label(for='beds') # of Bedrooms
      input.form-control#beds(type='number', name='beds', ng-model='listing.beds', required)
  .col-md-1
    .form-group
      label(for='baths') # of Baths
      input.form-control#baths(type='number', name='baths', ng-model='listing.baths', required)
  .col-md-2
    .form-group
      label(for='sqft') SQFT
      input.form-control#sqft(type='number', name='sqft', ng-model='listing.sqft', required)
  .col-md-2
    .form-group
      label(for='price') List Price
      input.form-control#price(type='number', name='price', ng-model='listing.price', required)
.row
  .col-md-3.col-md-offset-3        
    label(for='photo') Listing Photo
    img.img-responsive.img-thumbnail.form-control#photo(name='photo', ng-model='listing.photo', ng-src='{{photo}}')
  .col-md-3
    form
      .form-group
        button.webButton.btn.btn-info(ng-click='camOn()', ng-hide='webcamOn') Webcam On
        button.webButton.btn.btn-danger(ng-click='camOff()', ng-show='webcamOn') Webcam Off
        button.webButton.btn.btn-primary(ng-click='takeSnapshot()', ng-show='webcamOn') Take Snapshot
        #camera
.row
  .col-md-3.col-md-offset-3    
    .form-group
      button.modifyBtns.btn.btn-success(ng-hide='state==="listings.edit"', type='submit', ng-click='create(listing)') Create Listing
      button.modifyBtns.btn.btn-warning(ng-show='state==="listings.edit"', type='submit', ng-click='edit(listing)') Edit Listing
    
